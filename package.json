{
  "name": "night.js",
  "version": "2.0.0-beta.1",
  "description": "Smart dark mode switch (based on location and time)",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/night.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build && npm run test",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "deploy": "gh-pages -d demo/build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/night.js.git"
  },
  "keywords": [
    "JavaScript",
    "dark",
    "night",
    "switch",
    "smart",
    "sun"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/night.js/issues"
  },
  "homepage": "https://github.com/JB1905/night.js#readme",
  "dependencies": {
    "suncalc2": "^1.8.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}

{
  "name": "night.js",
  "version": "2.0.0-beta.1",
  "description": "Smart dark mode switch (based on location and time)",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/night.min.js",
  "scripts": {
    "release": "npm run prettier && npm run lint && npm run build:dev && npm run build && npm run test",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint src --fix",
    "prettier": "prettier --write 'src/**/*.js'",
    "deploy": "gh-pages -d demo/build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/night.js.git"
  },
  "keywords": [
    "JavaScript",
    "dark",
    "night",
    "switch",
    "smart",
    "sun"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/night.js/issues"
  },
  "homepage": "https://github.com/JB1905/night.js#readme",
  "dependencies": {
    "suncalc2": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-private-methods": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "11.0.0-beta.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}

{
  "name": "night.js",
  "version": "1.1.0",
  "description": "Smart dark mode switcher (based on location and time)",
  "main": "lib/night.min.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
